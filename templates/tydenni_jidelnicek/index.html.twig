{% extends 'base.html.twig' %}

{% block title %}Wochentliche Speiseliste{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="container text">
        <h1>Wochentliche Speiseliste {{ montag }} - {{ sonntag }}</h1>


            {{ form_start(form) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>
        <div class="row">
            {% for tag in tage %} <!-- foreach in twigg -->
            <div class="col-3 px-3 mx-3">
                <h3>{{ tag }}</h3>
                <div class="row">
                    <div class="col">
                        {{ form_row(form["fruhstuck" ~ tag]) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(form["snack" ~ tag]) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(form["mittagessen" ~ tag]) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(form["abendsbrot"~ tag]) }}
                    </div>
                </div>
            </div>
            {% endfor %}


            <div class="row">
                <div class="col">
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
